{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "A simple Pomodoro Timer desktop app built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.pomodoro",
    "productName": "Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "html/**/*",
      "js/**/*",
      "css/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}